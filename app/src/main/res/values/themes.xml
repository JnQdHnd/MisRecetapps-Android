<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MisRecetapps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/carbon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Theme.MisRecetapps.FontQuicksandBoldTitle">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.MisRecetapps.TitleDetalles">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Theme.MisRecetapps.SubtitleDetalles">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Theme.MisRecetapps.FontQuicksandRegular">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Theme.MisRecetapps.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MisRecetapps.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MisRecetapps.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>