<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_card"
        android:background="@drawable/background_square_light_grey_bordered">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingHorizontal="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/receta_title_card_instruccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ll_buttons_instruccion"
                    android:text="@string/title_receta_card_instruccion"
                    android:textColor="@color/primary_light_card_title"
                    android:textSize="@dimen/font_size_card_title"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/ll_buttons_instruccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/receta_card_instruccion_mic"
                        android:layout_width="@dimen/min_width_button"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/elimina_instruccion"
                        android:src="@drawable/ic_mic"
                        android:paddingHorizontal="@dimen/padding_h_btns_instruccion"/>
                    <ImageButton
                        android:id="@+id/receta_card_instruccion_photo"
                        android:layout_width="@dimen/min_width_button"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/elimina_instruccion"
                        android:src="@drawable/ic_camera"
                        android:paddingHorizontal="@dimen/padding_h_btns_instruccion"/>
                    <ImageButton
                        android:id="@+id/receta_card_instruccion_delete"
                        android:layout_width="@dimen/min_width_button"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/elimina_instruccion"
                        android:paddingHorizontal="@dimen/padding_h_btns_instruccion"
                        android:src="@drawable/ic_trash_can"/>
                 </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/container_instrucciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/input_instruccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/background_square_white_bordered"
                        android:focusable="true"
                        android:gravity="top"
                        android:hint="@string/hint_receta_instruccion"
                        android:imeOptions="flagNoExtractUi|actionDone"
                        android:inputType="text|textMultiLine"
                        android:padding="@dimen/padding_card_input_select"
                        android:textSize="@dimen/font_size_card_input_select"
                        android:minHeight="48dp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true">
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/instruccion_check"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/round_button"
                        android:src="@drawable/ic_check_instruccion"
                        android:visibility="gone"/>
                    </FrameLayout>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_image_instruccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    app:cardCornerRadius="5dp"
                    android:visibility="visible">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_instruccion"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>