<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/margin_bottom_card"
        android:background="@drawable/background_square_light_grey_bordered">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingHorizontal="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/receta_title_card_instruccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ll_buttons_instruccion"
                    android:text="@string/title_receta_card_instruccion"
                    android:textColor="@color/primary_light_card_title"
                    android:textSize="@dimen/font_size_card_title"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/ll_buttons_instruccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/receta_card_instruccion_mic"
                        android:layout_width="@dimen/min_width_button"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/elimina_instruccion"
                        android:src="@drawable/ic_mic"
                        android:paddingHorizontal="@dimen/padding_h_btns_instruccion"/>
                    <ImageButton
                        android:id="@+id/receta_card_instruccion_photo"
                        android:layout_width="@dimen/min_width_button"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/elimina_instruccion"
                        android:src="@drawable/ic_camera"
                        android:paddingHorizontal="@dimen/padding_h_btns_instruccion"/>
                    <ImageButton
                        android:id="@+id/receta_card_instruccion_delete"
                        android:layout_width="@dimen/min_width_button"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/elimina_instruccion"
                        android:paddingHorizontal="@dimen/padding_h_btns_instruccion"
                        android:src="@drawable/ic_trash_can"/>
                 </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/input_instruccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_square_white_bordered"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_receta_instruccion"
                    android:imeOptions="flagNoExtractUi|actionDone"
                    android:inputType="textImeMultiLine|textMultiLine"
                    android:minHeight="@dimen/min_width_button"
                    android:padding="@dimen/padding_card_input_select"
                    android:textSize="@dimen/font_size_card_input_select" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/instruccion_check"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_button"
                    android:src="@drawable/ic_check_instruccion"
                    android:visibility="gone"/>
                </RelativeLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_image_instruccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="@dimen/margin_cardview_vertical"
                android:visibility="gone">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_instruccion"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>