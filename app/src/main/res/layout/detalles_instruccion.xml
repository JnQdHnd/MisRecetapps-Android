<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <RelativeLayout
       android:id="@+id/detalles_instruccion_ll_titulo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/punto"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_square"
          android:paddingHorizontal="10dp"
          android:paddingTop="10dp"
          android:paddingBottom="5dp"
          android:layout_alignParentStart="true"/>

      <TextView
          android:id="@+id/detalles_instruccion_titulo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_toEndOf="@id/punto"
          android:text="@string/title_receta_card_instruccion"
          android:textColor="@color/primary_grey_purple_light"
          android:textSize="@dimen/font_size_detalle_contenido"
          android:theme="@style/Theme.MisRecetapps.SubtitleDetalles" />

   </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginBottom="5dp">
      <TextView
          android:id="@+id/detalles_instruccion_texto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="10dp"
          android:layout_marginBottom="5dp"
          android:textSize="@dimen/font_size_detalle_contenido"
          android:hint="@string/sin_instrucciones_hint"/>


         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/detalles_instruccion_photo"
             android:layout_width="match_parent"
             android:layout_height="250dp"
             android:layout_marginVertical="5dp"
             android:visibility="gone"/>

   </LinearLayout>

</LinearLayout>