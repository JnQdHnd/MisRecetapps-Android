<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:id="@+id/containerReceta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/main_padding_small"
        android:background="?attr/selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNombreReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_receta_nombre"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/main_padding_small"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivFavoritoReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/main_padding_small"
            android:layout_marginTop="@dimen/main_padding_small"
            android:layout_marginEnd="@dimen/main_padding_small"
            android:layout_marginBottom="@dimen/main_padding_small"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_star_border_36" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>