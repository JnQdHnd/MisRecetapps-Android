<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/semi_trasparente"
    tools:context=".controllers.receta.details.RecetaDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/primary_grey_purple_light_solid"
            app:strokeWidth="1dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <TextView
                        android:id="@+id/info_lectura_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:text="@string/lectura_de_instrucciones"
                        android:textSize="22sp"
                        android:theme="@style/Theme.MisRecetapps.TitleDetalles" />

                    <ImageButton
                        android:id="@+id/info_lectura_cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/opciones_en_receta"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:src="@drawable/ic_cancel" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/primary_grey_purple_light_solid"
                    android:contentDescription="@string/separador" />

                <LinearLayout
                    android:id="@+id/info_lectura_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info_lectura_de_receta"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="16sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info_lectura_palabras_clave"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="10dp"
                        android:textSize="17sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingHorizontal="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reproducir todos"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Se reproducen todos los pasos de corrido."
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingHorizontal="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comenzar"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Se reproduce el primer paso solamente."
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingHorizontal="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Siguiente"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Se reproduce el paso siguiente."
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/punto"
                            android:paddingHorizontal="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/info_anterior_title"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info_anterior"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/punto"
                            android:paddingHorizontal="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/info_repetir_title"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info_repetir"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:id="@+id/punto"
                            android:contentDescription="@string/punto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/info_detener_title"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info_detener"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</ScrollView>